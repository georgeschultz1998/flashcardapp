<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Select Flash Card Set to Modify:"
        android:textSize="20sp"
        android:padding="8dp"/>

    <Spinner
        android:id="@+id/arraySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:textSize="20sp"
        android:entries="@array/flash_card_array_names"
        android:prompt="@string/flash_card_array_prompt"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/newFlashCardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:minHeight="48dp"
        android:text="Add New Flash Card"
        android:padding="30dp"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:id="@+id/viewFlashCardsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:minHeight="48dp"
        android:text="View Flash Cards"
        android:padding="30dp"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:id="@+id/addArrayButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:minHeight="48dp"
        android:text="Add Flash Card Set"
        android:padding="30dp"
        android:layout_marginBottom="5dp"
        />

</LinearLayout>
